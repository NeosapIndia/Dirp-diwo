{
  "extends": "../tsconfig.json",
  "resolveJsonModule": true, 
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "types": ["node"],
    "baseUrl": "./",
    "module": "es2020",
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noImplicitAny": false,
  },
  "lib": [
    "es2020",
    "dom"
  ],
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ],
  "files": [
    "main.ts",
    "polyfills.ts"
  ]
}
